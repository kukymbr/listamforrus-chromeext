{
  "manifest_version": 3,
  "name": "List.am for Russians",
  "version": "0.0.1",
  "description": "Format list.am website for Russian visitor",
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/70.png",
    "128": "images/192.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/price.js",
        "scripts/list.js",
        "scripts/rent.js",
        "scripts/content.js"
      ],
      "matches": [
        "https://www.list.am/*"
      ],
      "run_at": "document_end"
    }
  ]
}